{
  // Editor Settings
  "editor.fontFamily": "'JetBrainsMono Nerd Font Mono'",
  "editor.fontSize": 16,
  "editor.fontLigatures": true,
  "editor.codeLensFontFamily": "'JetBrainsMono Nerd Mono'",
  "editor.hover.delay": 1000,
  "editor.cursorBlinking": "expand",
  "editor.mouseWheelZoom": true,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  "editor.lineNumbers": "relative",
  "editor.stickyScroll.enabled": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.wordWrapColumn": 500,

  // Terminal Settings
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.fontFamily": "'JetBrainsMono Nerd Font Mono'",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.mouseWheelZoom": true,
  "terminal.integrated.env.windows": {},

  // Code Runner Settings
  "code-runner.clearPreviousOutput": true,
  "code-runner.saveAllFilesBeforeRun": true,
  "code-runner.showExecutionMessage": false,
  "code-runner.runInTerminal": true,
  "code-runner.executorMap": {
    "javascript": "node",
    "c": "clear && cd $dir && gcc $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "cpp": "clear && cd $dir && g++ $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "objective-c": "cd $dir && gcc -framework Cocoa $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "python": "clear && python -u",
    "lua": "clear && lua",
    "bat": "cmd /c",
    "rust": "clear && cd $dir && rustc $fileName && $dir$fileNameWithoutExt",
    "sass": "sass --style expanded",
    "scss": "scss --style expanded"
  },

  // UI Customization
  "window.title": " ",
  "window.titleBarStyle": "custom",
  "window.menuBarVisibility": "toggle",
  "window.openFoldersInNewWindow": "off",
  "window.density.editorTabHeight": "compact",
  "window.commandCenter": false,
  "workbench.startupEditor": "none",
  "workbench.colorTheme": "Aesthetic (blue)",
  "workbench.iconTheme": "symbols",
  "workbench.productIconTheme": "material-product-icons",
  "workbench.activityBar.location": "top",
  "workbench.tips.enabled": false,
  "workbench.layoutControl.enabled": false,
  "workbench.tree.indent": 20,
  "workbench.tree.renderIndentGuides": "none",
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmPasteNative": false,
  "debug.onTaskErrors": "abort",
  "git.openRepositoryInParentFolders": "never",
  "security.workspace.trust.untrustedFiles": "open",
  "workbench.settings.applyToAllProfiles": ["editor.fontFamily"],
  "workbench.colorCustomizations": {
    "focusBorder": "#00000000",
    "list.activeSelectionBackground": "#2c3136",
    "list.activeSelectionForeground": "#ffffff",
    "list.inactiveSelectionBackground": "#25292d",
    "list.inactiveSelectionForeground": "#cdcdcd"
  },

  // Diff Editor Settings
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.wordWrap": "off",

  // Formatting & Prettier
  "notebook.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.printWidth": 100,

  // Extensions & Customizations
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "vscode_custom_css.imports": [
    "file:///C:/Users/Manoj/.vscode/custom/tweak.css",
    "file:///C:/Users/Manoj/.vscode/custom/tweak.js"
  ],
  "extensions.ignoreRecommendations": true,
  "codesnap.containerPadding": "2em",
  "codesnap.showWindowTitle": true,

  // Codeium Settings
  "codeium.enableConfig": {
    "*": true,
    "plaintext": true,
    "xml": true
  },

  // Miscellaneous
  "breadcrumbs.enabled": false,
  "editor.minimap.autohide": true,
  "workbench.editorAssociations": {
    "*.svg": "default"
  },
  "codeium.enableCodeLens": false,
  "editor.unicodeHighlight.nonBasicASCII": false
}
